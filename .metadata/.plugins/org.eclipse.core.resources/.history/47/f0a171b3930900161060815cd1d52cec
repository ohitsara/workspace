import java.io.*;
import java.util.*;
import java.text.DateFormat;
import java.text.SimpleDateFormat;

public class ReadCalendarFile {
	
	public static void main(String [] args) throws IOException{
		/*
		 * @override
		 * Initializations for the iteration
		 * of while loop
		 */
		Scanner in = new Scanner(System.in); 
		String line;
		ArrayList<String> list = new ArrayList<String>(); //storage .ics files from user
		
		System.out.println("Please input your iCal file(s):");
		while ((line = in.nextLine()).length( ) > 0){
			list.add(line);
		}//end of while loop
		in.close();
		
		/*
		 * @override
		 * Initializations for reading the
		 * multiple .ics files
		 */
		
		String fileName = null;
		
		for(int i = 0; i < list.size(); i++){	
			try{
				fileName = list.get(i);
				FileReader fr = new FileReader(fileName);
				BufferedReader br = new BufferedReader(fr);
			}//end of try      
			catch(FileNotFoundException ex) {
				System.out.println("Unable to open file '" + fileName + "'");                
			}//end of 1st catch
			catch(IOException ex) {
				System.out.println("Error reading file '" + fileName + "'");                  
            }//end of 2nd catch
		}//end of for loop
	}//end of main

}//end of class
